<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/md_red_100" />
            <stroke android:width="1dp" android:color="@color/black_alpha" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"
                />
            <corners android:bottomRightRadius="5dip" android:bottomLeftRadius="5dip"
                android:topLeftRadius="5dip" android:topRightRadius="5dip"/>
        </shape>
    </item>
    <item>
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">>
            <item>

                <shape xmlns:android="http://schemas.android.com/apk/res/android">
                    <stroke android:width="0.5dp" android:color="@color/black_alpha" />

                    <solid android:color="@color/md_white_1000" />


                    <corners android:bottomRightRadius="5dip" android:bottomLeftRadius="5dip"
                        android:topLeftRadius="5dip" android:topRightRadius="5dip"/>
                </shape>
            </item>
            <item >
                <shape xmlns:android="http://schemas.android.com/apk/res/android">
                    <stroke android:width="0.5dp" android:color="@color/black_alpha" />

                    <solid android:color="@color/md_white_1000" />


                    <corners android:bottomRightRadius="5dip" android:bottomLeftRadius="5dip"
                        android:topLeftRadius="5dip" android:topRightRadius="5dip"/>
                </shape>
            </item>
            <item >
                <shape xmlns:android="http://schemas.android.com/apk/res/android">
                    <stroke android:width="0.5dp" android:color="@color/black_alpha" />

                    <solid android:color="@color/md_white_1000" />



                    <corners android:bottomRightRadius="5dip" android:bottomLeftRadius="5dip"
                        android:topLeftRadius="5dip" android:topRightRadius="5dip"/>
                </shape>
            </item>
            <item >
                <shape xmlns:android="http://schemas.android.com/apk/res/android">
                    <stroke android:width="0.5dp" android:color="@color/black_alpha" />

                    <solid android:color="@color/md_white_1000" />



                    <corners android:bottomRightRadius="5dip" android:bottomLeftRadius="5dip"
                        android:topLeftRadius="5dip" android:topRightRadius="5dip"/>
                </shape></item>
        </layer-list></item>

</selector>