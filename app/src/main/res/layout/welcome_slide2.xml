<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/welcome_slide_1"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="0.67"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="10dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="#FFF"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">


                                <android.support.v7.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"
                                    android:background="@drawable/border_white"
                                    >

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:id="@+id/text_tl_"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginTop="10dp"
                                        android:text="Training Load"
                                        android:textColor="#1A237E"
                                        android:textSize="18sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/text_tl_weekly"
                                        android:layout_below="@+id/text_tl_"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:text="weekly"
                                        android:textColor="#303F9F"
                                        android:textAppearance="?android:attr/textAppearanceSmall"/>

                                    <ProgressBar
                                        android:id="@+id/progressBarTL"
                                        style="?android:attr/progressBarStyleHorizontal"
                                        android:layout_width="200dp"
                                        android:layout_height="200dp"
                                        android:layout_marginTop="26dp"
                                        android:background="@drawable/circle_shape"
                                        android:indeterminate="false"
                                        android:max="10000"
                                        android:progress="0"
                                        android:progressDrawable="@drawable/circular_progress_bar" />


                                        <TextView
                                            android:paddingTop="15dp"
                                            android:id="@+id/progress_circle_text_total_atlet"
                                            android:layout_below="@id/progress_circle_text"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true"
                                            android:background="@android:color/transparent"
                                            android:gravity="center"
                                            android:text="Calculating..."
                                            android:textColor="@color/colorPrimary"
                                            android:textAppearance="?android:attr/textAppearanceSmall"
                                            android:textStyle="bold" />

                                            <TextView
                                                android:paddingTop="85dp"
                                                android:visibility="gone"
                                                android:id="@+id/text_tl_incomplete"
                                                android:layout_below="@id/progress_circle_text"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerInParent="true"
                                                android:background="@android:color/transparent"
                                                android:gravity="center"
                                                android:text="Not Complete"
                                                android:textColor="@color/md_red_900"
                                                android:textAppearance="?android:attr/textAppearanceSmall"
                                                android:textStyle="bold" />

                                </RelativeLayout>

                                </android.support.v7.widget.CardView>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:background="#fff"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <android.support.v7.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"
                                    android:background="@drawable/border_white"
                                    >

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:id="@+id/text_rcv"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginTop="10dp"
                                        android:text="Recovery"
                                        android:textColor="#1A237E"
                                        android:textSize="18sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/text_rcv_today"
                                        android:layout_below="@+id/text_rcv"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:text="Today"
                                        android:textColor="#303F9F"
                                        android:textAppearance="?android:attr/textAppearanceSmall"/>


                                    <ProgressBar
                                        android:id="@+id/progressBarRCV"
                                        style="?android:attr/progressBarStyleHorizontal"
                                        android:layout_width="200dp"
                                        android:layout_height="200dp"
                                        android:layout_marginTop="26dp"
                                        android:background="@drawable/circle_shape"
                                        android:indeterminate="false"
                                        android:max="10000"
                                        android:progress="0"
                                        android:progressDrawable="@drawable/circular_progress_bar" />

                                    <TextView
                                        android:paddingTop="15dp"
                                        android:id="@+id/progress_circle_rcv"
                                        android:layout_below="@id/progress_circle_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:background="@android:color/transparent"
                                        android:gravity="center"
                                        android:text="Calculating..."
                                        android:textColor="@color/colorPrimary"
                                        android:textAppearance="?android:attr/textAppearanceSmall"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:paddingTop="85dp"
                                        android:visibility="gone"
                                        android:id="@+id/text_rcv_incomplete"
                                        android:layout_below="@id/progress_circle_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:background="@android:color/transparent"
                                        android:gravity="center"
                                        android:text="Not Complete"
                                        android:textColor="@color/md_red_900"
                                        android:textAppearance="?android:attr/textAppearanceSmall"
                                        android:textStyle="bold" />
                                </RelativeLayout>
                                </android.support.v7.widget.CardView>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="#fff"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <android.support.v7.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"
                                    android:background="@drawable/border_white"
                                    >

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:id="@+id/text_pmc"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginTop="10dp"
                                        android:text="PMC"
                                        android:textColor="@color/colorPrimary"
                                        android:textAppearance="?android:attr/textAppearanceMedium"
                                        android:textStyle="bold" />


                                    <ProgressBar
                                        android:id="@+id/progressBarPMC_Teknik"
                                        style="?android:attr/progressBarStyleHorizontal"
                                        android:layout_width="120dp"
                                        android:layout_height="120dp"
                                        android:layout_marginTop="5dp"
                                        android:background="@drawable/circle_shape"
                                        android:indeterminate="false"
                                        android:max="10000"
                                        android:progress="0"
                                        android:progressDrawable="@drawable/circular_progress_bar" />


                                    <TextView
                                        android:paddingTop="15dp"
                                        android:id="@+id/progress_circle_text3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:background="@android:color/transparent"
                                        android:gravity="center"
                                        android:text="-"
                                        android:textColor="@color/colorPrimary"
                                        android:textAppearance="?android:attr/textAppearanceMedium"
                                        android:textStyle="bold" />
                                </RelativeLayout>

                            </android.support.v7.widget.CardView>


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:background="#fff"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <android.support.v7.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"
                                    android:background="@drawable/border_white"
                                    >

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:id="@+id/text_cedera"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginTop="10dp"
                                        android:text="Cedera"
                                        android:textColor="@color/colorPrimary"
                                        android:textAppearance="?android:attr/textAppearanceMedium"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_below="@+id/text_cedera"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:text="Today"
                                        android:textColor="#303F9F"
                                        android:textAppearance="?android:attr/textAppearanceSmall"/>


                                    <ProgressBar
                                        android:id="@+id/progressBarCedera"
                                        style="?android:attr/progressBarStyleHorizontal"
                                        android:layout_width="200dp"
                                        android:layout_height="200dp"
                                        android:layout_marginTop="26dp"
                                        android:background="@drawable/circle_shape"
                                        android:indeterminate="false"
                                        android:max="10000"
                                        android:progress="0"
                                        android:progressDrawable="@drawable/circular_progress_bar" />

                                    <TextView
                                        android:paddingTop="15dp"
                                        android:id="@+id/progress_circle_text4"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:background="@android:color/transparent"
                                        android:gravity="center"
                                        android:text="Calculating"
                                        android:textColor="@color/colorPrimary"
                                        android:textAppearance="?android:attr/textAppearanceSmall"
                                        android:textStyle="bold" />
                                </RelativeLayout>

                                </android.support.v7.widget.CardView>

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.1"
                        android:baselineAligned="false" >
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>