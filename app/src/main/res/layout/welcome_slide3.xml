<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_dashboard">

    <RelativeLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="7dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_weight="0.67"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="0.5"
                    android:baselineAligned="false"
                    android:gravity="center" >

                    <LinearLayout
                        android:id="@+id/btn_tl"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="2dp"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:clickable="true"
                        android:onClick="loadTrainingLoad"
                        android:background="@drawable/custom_transparent_color">

                        <android.support.v7.widget.CardView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:background="@drawable/border_white"
                            >

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical" >

                                <TextView
                                    android:id="@+id/text_tl_"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:text="Training Load"
                                    android:layout_marginTop="10dp"
                                    android:gravity="center"
                                    android:textColor="@color/colorPrimary"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textStyle="bold"
                                    />

                                <TextView
                                    android:id="@+id/text_tl_weekly"
                                    android:layout_below="@+id/text_tl_"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:text="weekly"
                                    android:layout_marginBottom="10dp"
                                    android:gravity="center"
                                    android:textColor="#303F9F"
                                    android:textAppearance="?android:attr/textAppearanceSmall"/>
                                </LinearLayout>

                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/border_white"
                            >

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ProgressBar
                                android:id="@+id/progressBarTL"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="200dp"
                                android:layout_height="200dp"
                                android:padding="3dp"
                                android:background="@drawable/circle_shape"
                                android:indeterminate="false"
                                android:max="10000"
                                android:progress="0"
                                android:progressDrawable="@drawable/circular_progress_bar" />

                            <TextView
                                android:id="@+id/progress_circle_text_total_atlet"
                                android:layout_below="@id/progress_circle_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:background="@android:color/transparent"
                                android:gravity="center"
                                android:text="Calculating..."
                                android:textColor="@color/colorPrimary"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textStyle="bold" />

                            <TextView
                                android:visibility="gone"
                                android:id="@+id/text_tl_incomplete"
                                android:layout_below="@id/progress_circle_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:background="@android:color/transparent"
                                android:gravity="center"
                                android:text="Not Complete"
                                android:textColor="@color/md_red_900"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textStyle="bold" />

                            </RelativeLayout>

                        </android.support.v7.widget.CardView>

                    </LinearLayout>



                    <LinearLayout
                        android:id="@+id/btn_rcv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="2dp"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:clickable="true"
                        android:onClick="loadRecovery"
                        android:background="@drawable/custom_transparent_color">


                        <android.support.v7.widget.CardView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:background="@drawable/border_white"
                            >

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical" >


                                <TextView
                                    android:id="@+id/text_rcv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:text="Recovery"
                                    android:gravity="center"
                                    android:layout_marginTop="10dp"
                                    android:textColor="@color/colorPrimary"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textStyle="bold" />


                                <TextView
                                    android:id="@+id/text_rcv_today"
                                    android:layout_below="@+id/text_rcv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:gravity="center"
                                    android:layout_marginBottom="10dp"
                                    android:text="Today"
                                    android:textColor="#303F9F"
                                    android:textAppearance="?android:attr/textAppearanceSmall"/>
                            </LinearLayout>

                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/border_white"
                            >



                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">


                            <ProgressBar
                                android:id="@+id/progressBarRCV"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="200dp"
                                android:layout_height="200dp"
                                android:padding="3dp"
                                android:background="@drawable/circle_shape"
                                android:indeterminate="false"
                                android:max="10000"
                                android:progress="0"
                                android:progressDrawable="@drawable/circular_progress_bar" />

                            <TextView
                                android:id="@+id/progress_circle_rcv"
                                android:layout_below="@id/progress_circle_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:background="@android:color/transparent"
                                android:gravity="center"
                                android:text="Calculating..."
                                android:textColor="@color/colorPrimary"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textStyle="bold" />

                            <TextView
                                android:visibility="gone"
                                android:id="@+id/text_rcv_incomplete"
                                android:layout_below="@id/progress_circle_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:background="@android:color/transparent"
                                android:gravity="center"
                                android:text="Not Complete"
                                android:textColor="@color/md_red_900"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        </android.support.v7.widget.CardView>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="0.5"
                    android:baselineAligned="false" >

                    <LinearLayout
                        android:id="@+id/btn_pmc"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="2dp"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:clickable="true"
                        android:onClick="loadPMC"
                        android:background="@drawable/custom_transparent_color">


                        <android.support.v7.widget.CardView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:background="@drawable/border_white"
                            >

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical" >

                                <TextView
                                    android:id="@+id/text_pmc"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:text="PMC"
                                    android:gravity="center"
                                    android:layout_marginTop="10dp"
                                    android:textColor="@color/colorPrimary"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textStyle="bold" />


                                <TextView
                                    android:layout_below="@+id/text_pmc"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:text="Today"
                                    android:gravity="center"
                                    android:textColor="#303F9F"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:layout_marginBottom="10dp"
                                    />


                            </LinearLayout>

                        </android.support.v7.widget.CardView>


                        <android.support.v7.widget.CardView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:background="@drawable/border_white"
                            >

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/text_pmc_total_atlet"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:text="-"
                                    android:gravity="center"
                                    android:textColor="@color/colorPrimary"
                                    android:textAppearance="?android:attr/textAppearanceSmall"/>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/layout_header"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:paddingBottom="29dp"
                                android:paddingTop="22dp">


                            <TableLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:padding="2dp"
                                >

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    >

                                    <ProgressBar
                                        android:id="@+id/progressBarPMC_Teknik"
                                        style="?android:attr/progressBarStyleHorizontal"
                                        android:layout_width="150dp"
                                        android:layout_height="150dp"
                                        android:padding="3dp"
                                        android:background="@drawable/circle_shape"
                                        android:indeterminate="false"
                                        android:max="10000"
                                        android:progress="0"
                                        android:progressDrawable="@drawable/circular_progress_bar" />

                                    <TextView
                                        android:id="@+id/progress_circle_pmc_teknik"
                                        android:layout_below="@id/progress_circle_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:layout_centerHorizontal="true"
                                        android:background="@android:color/transparent"
                                        android:gravity="center"
                                        android:text="load..."
                                        android:textColor="@color/colorPrimary"
                                        android:textAppearance="?android:attr/textAppearanceSmall"
                                        android:textStyle="bold"
                                        />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:text="Teknik"
                                        android:textColor="#303F9F"

                                        android:textAppearance="?android:attr/textAppearanceSmall"/>

                                </RelativeLayout>
                            </TableLayout>


                            <TableLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:padding="2dp"
                                >

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">


                                    <TextView
                                        android:id="@+id/progress_circle_pmc_fisik"
                                        android:layout_below="@id/progress_circle_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:background="@android:color/transparent"
                                        android:gravity="center"
                                        android:text="load..."
                                        android:textColor="@color/colorPrimary"
                                        android:textAppearance="?android:attr/textAppearanceSmall"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:text="Fisik"
                                        android:textColor="#303F9F"
                                        android:textAppearance="?android:attr/textAppearanceSmall"/>

                                    <ProgressBar
                                        android:id="@+id/progressBarPMC_Fisik"
                                        style="?android:attr/progressBarStyleHorizontal"
                                        android:layout_width="150dp"
                                        android:layout_height="150dp"
                                        android:padding="3dp"
                                        android:background="@drawable/circle_shape"
                                        android:indeterminate="false"
                                        android:max="10000"
                                        android:progress="0"
                                        android:progressDrawable="@drawable/circular_progress_bar"
                                        android:layout_alignParentTop="true"
                                        android:layout_alignParentLeft="true"
                                        android:layout_alignParentStart="true" />

                                </RelativeLayout>
                            </TableLayout>


                        </LinearLayout>


                        </android.support.v7.widget.CardView>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_cedera"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="2dp"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:clickable="true"
                        android:onClick="loadCedera"
                        android:background="@drawable/custom_transparent_color">

                        <android.support.v7.widget.CardView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:background="@drawable/border_white"
                            >

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical" >

                                <TextView
                                    android:id="@+id/text_cedera"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:text="Cedera"
                                    android:layout_marginTop="10dp"
                                    android:gravity="center"
                                    android:textColor="@color/colorPrimary"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textStyle="bold" />


                                <TextView
                                    android:id="@+id/text_cedera_today"
                                    android:layout_below="@+id/text_rcv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:text="Today"
                                    android:layout_marginBottom="10dp"
                                    android:gravity="center"
                                    android:textColor="#303F9F"
                                    android:textAppearance="?android:attr/textAppearanceSmall"/>

                            </LinearLayout>

                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/border_white"
                            >

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">


                            <ProgressBar
                                android:id="@+id/progressBarCedera"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="200dp"
                                android:layout_height="200dp"
                                android:padding="3dp"
                                android:background="@drawable/circle_shape"
                                android:indeterminate="false"
                                android:max="10000"
                                android:progress="0"
                                android:progressDrawable="@drawable/circular_progress_bar" />

                            <TextView
                                android:id="@+id/progress_circle_text4"
                                android:layout_below="@id/progress_circle_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:background="@android:color/transparent"
                                android:gravity="center"
                                android:text="Calculating..."
                                android:textColor="@color/colorPrimary"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        </android.support.v7.widget.CardView>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>