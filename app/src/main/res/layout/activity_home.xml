<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:gpb="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp" />



        <android.support.v7.widget.SearchView
            android:id="@+id/search"
            android:icon="@android:drawable/ic_menu_search"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/toolbar"
            android:background="@drawable/btnformate"
            android:layout_margin="5dp"
            />


    <FrameLayout
        android:layout_below="@id/search"
        android:id="@+id/frame_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/dashboard"
            layout="@layout/activity_dashboard"/>

        <include
            android:id="@+id/account"
            layout="@layout/fragment_account_new"/>

        <include
            android:id="@+id/update_"
            layout="@layout/fragment_update"/>

        <include
            android:id="@+id/periodization"
            layout="@layout/fragment_periodization"/>

        <include
            android:id="@+id/wellness"
            layout="@layout/fragment_wellness_percentage"/>

        <TextView
            android:id="@+id/text1"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:textColor="@color/black"/>

        <ListView
            android:id="@+id/listview_member"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:dividerHeight="0dp">
        </ListView>

        <GridView
            android:id="@+id/gridview_member"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="2"
            android:horizontalSpacing="4dp"
            android:verticalSpacing="4dp" >
        </GridView>


        <android.support.v4.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <WebView
                android:id="@+id/webViewProfile"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                />

            </FrameLayout>

        </android.support.v4.widget.NestedScrollView>


    </FrameLayout>





    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <ProgressBar
            android:id="@+id/progressBar"
            android:indeterminateDrawable="@drawable/my_progress_custom_1"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">
        </ProgressBar>

    </RelativeLayout>

</RelativeLayout>



