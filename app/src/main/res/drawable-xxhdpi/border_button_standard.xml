<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/black_alpha" />
            <stroke android:width="1dp" android:color="@color/topline_btn" />
            <padding android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp"
                />
            <corners android:bottomRightRadius="5dip" android:bottomLeftRadius="5dip"
                android:topLeftRadius="5dip" android:topRightRadius="5dip"/>
        </shape>
    </item>

    <item>
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">>
            <item>

                <shape xmlns:android="http://schemas.android.com/apk/res/android">
                    <stroke android:width="1dp" android:color="@color/md_white_1000" />

                    <solid android:color="@color/md_white_1000" />


                    <corners android:bottomRightRadius="5dip" android:bottomLeftRadius="5dip"
                        android:topLeftRadius="5dip" android:topRightRadius="5dip"/>
                </shape>
             </item>
             <item >
                 <shape xmlns:android="http://schemas.android.com/apk/res/android">
                    <stroke android:width="1dp" android:color="@color/md_white_1000" />

                    <solid android:color="@color/md_white_1000" />


                     <corners android:bottomRightRadius="5dip" android:bottomLeftRadius="5dip"
                         android:topLeftRadius="5dip" android:topRightRadius="5dip"/>
                </shape>
             </item>
             <item >
                 <shape xmlns:android="http://schemas.android.com/apk/res/android">
                    <stroke android:width="1dp" android:color="@color/md_white_1000" />

                    <solid android:color="@color/md_white_1000" />


                     <corners android:bottomRightRadius="5dip" android:bottomLeftRadius="5dip"
                         android:topLeftRadius="5dip" android:topRightRadius="5dip"/>
                </shape>
             </item>
            <item >
                <shape xmlns:android="http://schemas.android.com/apk/res/android">
                    <stroke android:width="1dp" android:color="@color/md_white_1000" />

                    <solid android:color="@color/md_white_1000" />

                    <corners android:bottomRightRadius="5dip" android:bottomLeftRadius="5dip"
                        android:topLeftRadius="5dip" android:topRightRadius="5dip"/>
                </shape></item>
        </layer-list></item>

</selector>